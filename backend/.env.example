# ============================================================================
# LLM Code Generator Backend Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# This file contains all available configuration options with descriptions

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application environment (development, production, test)
NODE_ENV=development

# Server port
PORT=3001

# ============================================================================
# GEMINI AI CONFIGURATION
# ============================================================================

# Gemini API key from Google AI Studio (REQUIRED)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini model to use (optional, defaults to gemini-2.5-flash)
GEMINI_MODEL=gemini-2.5-flash

# Maximum tokens for generation (optional, defaults to 8192)
GEMINI_MAX_TOKENS=8192

# Temperature for generation (0.0-2.0, optional, defaults to 0.7)
GEMINI_TEMPERATURE=0.7

# Request timeout in milliseconds (optional, defaults to 30000)
GEMINI_TIMEOUT=30000

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Frontend URL for CORS (REQUIRED)
FRONTEND_URL=http://localhost:3000

# CORS credentials (optional, defaults to true)
CORS_CREDENTIALS=true

# Allowed HTTP methods (optional, comma-separated)
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Allowed headers (optional, comma-separated)
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Request size limit (optional, defaults to 10mb)
REQUEST_SIZE_LIMIT=10mb

# Rate limiting window in milliseconds (optional, defaults to 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window (optional, defaults to 100)
RATE_LIMIT_MAX_REQUESTS=100

# Enable Helmet security middleware (optional, defaults to true)
ENABLE_HELMET=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (error, warn, info, debug, optional, defaults to info)
LOG_LEVEL=info

# Log format (combined, common, dev, short, tiny, optional, defaults to combined)
LOG_FORMAT=combined

# Enable console logging (optional, defaults to true)
LOG_ENABLE_CONSOLE=true

# Enable file logging (optional, defaults to false)
LOG_ENABLE_FILE=false

# Log file path (required if LOG_ENABLE_FILE=true)
# LOG_FILE_PATH=./logs/app.log

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable streaming code generation (optional, defaults to true)
FEATURE_STREAMING=true

# Enable code validation endpoint (optional, defaults to true)
FEATURE_CODE_VALIDATION=true

# Enable framework templates endpoint (optional, defaults to true)
FEATURE_TEMPLATES=true

# Enable metrics collection (optional, defaults to false)
FEATURE_METRICS=false

# Enable debug mode with verbose logging (optional, defaults to false)
FEATURE_DEBUG_MODE=false

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
# These settings are typically only used in development

# Enable detailed error stack traces (automatically enabled in development)
# ENABLE_ERROR_STACK=true

# Enable request/response logging (automatically enabled in development)
# ENABLE_REQUEST_LOGGING=true

# ============================================================================
# PRODUCTION CONFIGURATION
# ============================================================================
# These settings are recommended for production deployments

# For production, consider:
# NODE_ENV=production
# LOG_LEVEL=warn
# LOG_ENABLE_FILE=true
# LOG_FILE_PATH=/var/log/llm-code-generator/app.log
# FEATURE_DEBUG_MODE=false
# ENABLE_HELMET=true
# RATE_LIMIT_MAX_REQUESTS=50
# REQUEST_SIZE_LIMIT=5mb