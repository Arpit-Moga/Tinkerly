# ============================================================================
# LLM Code Generator Frontend Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# This file contains all available configuration options with descriptions

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Gemini API key for client-side requests (REQUIRED)
# Get your key from: https://makersuite.google.com/app/apikey
# Note: This will be exposed to the client, consider using backend proxy instead
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Backend API URL (REQUIRED)
# URL where the backend server is running
VITE_BACKEND_URL=http://localhost:3001

# API request timeout in milliseconds (optional, defaults to 30000)
VITE_API_TIMEOUT=30000

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application environment (development, production, test)
VITE_NODE_ENV=development

# Application title (optional, defaults to "LLM Code Generator")
VITE_APP_TITLE=LLM Code Generator

# Application version (optional, will be read from package.json if not set)
VITE_APP_VERSION=1.0.0

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable streaming code generation (optional, defaults to true)
VITE_FEATURE_STREAMING=true

# Enable code validation (optional, defaults to true)
VITE_FEATURE_CODE_VALIDATION=true

# Enable file download/export (optional, defaults to true)
VITE_FEATURE_FILE_EXPORT=true

# Enable project templates (optional, defaults to true)
VITE_FEATURE_TEMPLATES=true

# Enable dark mode toggle (optional, defaults to true)
VITE_FEATURE_DARK_MODE=true

# Enable debug mode with verbose logging (optional, defaults to false)
VITE_FEATURE_DEBUG_MODE=false

# Enable analytics tracking (optional, defaults to false)
VITE_FEATURE_ANALYTICS=false

# ============================================================================
# UI CONFIGURATION
# ============================================================================

# Default theme (light, dark, auto, optional, defaults to dark)
VITE_DEFAULT_THEME=dark

# Default code editor theme (optional, defaults to vs-dark)
VITE_DEFAULT_EDITOR_THEME=vs-dark

# Default font size for code editor (optional, defaults to 14)
VITE_DEFAULT_FONT_SIZE=14

# Enable code editor minimap (optional, defaults to true)
VITE_EDITOR_MINIMAP=true

# Enable code editor word wrap (optional, defaults to false)
VITE_EDITOR_WORD_WRAP=false

# ============================================================================
# WEBCONTAINER CONFIGURATION
# ============================================================================

# WebContainer startup timeout in milliseconds (optional, defaults to 30000)
VITE_WEBCONTAINER_TIMEOUT=30000

# Enable WebContainer auto-start (optional, defaults to true)
VITE_WEBCONTAINER_AUTO_START=true

# WebContainer memory limit in MB (optional, defaults to 512)
VITE_WEBCONTAINER_MEMORY_LIMIT=512

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Enable service worker for caching (optional, defaults to true in production)
VITE_ENABLE_SERVICE_WORKER=true

# Enable code splitting (optional, defaults to true)
VITE_ENABLE_CODE_SPLITTING=true

# Maximum file size for syntax highlighting in KB (optional, defaults to 100)
VITE_MAX_HIGHLIGHT_FILE_SIZE=100

# Debounce delay for file changes in milliseconds (optional, defaults to 300)
VITE_FILE_CHANGE_DEBOUNCE=300

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (error, warn, info, debug, optional, defaults to info)
VITE_LOG_LEVEL=info

# Enable console logging (optional, defaults to true in development)
VITE_ENABLE_CONSOLE_LOGGING=true

# Maximum number of console logs to keep (optional, defaults to 1000)
VITE_MAX_CONSOLE_LOGS=1000

# ============================================================================
# ANALYTICS CONFIGURATION (if VITE_FEATURE_ANALYTICS=true)
# ============================================================================

# Google Analytics tracking ID (optional)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Mixpanel project token (optional)
# VITE_MIXPANEL_TOKEN=your_mixpanel_token

# PostHog API key (optional)
# VITE_POSTHOG_KEY=your_posthog_key

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
# These settings are typically only used in development

# Enable React DevTools (automatically enabled in development)
# VITE_ENABLE_REACT_DEVTOOLS=true

# Enable Redux DevTools (automatically enabled in development)
# VITE_ENABLE_REDUX_DEVTOOLS=true

# Enable hot module replacement (automatically enabled in development)
# VITE_ENABLE_HMR=true

# ============================================================================
# PRODUCTION CONFIGURATION
# ============================================================================
# These settings are recommended for production deployments

# For production, consider:
# VITE_NODE_ENV=production
# VITE_FEATURE_DEBUG_MODE=false
# VITE_LOG_LEVEL=warn
# VITE_ENABLE_CONSOLE_LOGGING=false
# VITE_FEATURE_ANALYTICS=true
# VITE_ENABLE_SERVICE_WORKER=true

# Security note: Never put sensitive data in VITE_ variables
# as they will be exposed to the client-side code